<Window x:Class="TicketBookingWPF.View.ExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buchungen exportieren" Height="320" Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Exportzeitraum auswählen" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Von:" Margin="0,0,0,4"/>
        <DatePicker Grid.Row="2" x:Name="StartDatePicker" SelectedDate="{Binding StartDate}" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="3" Text="Bis:" Margin="0,0,0,4"/>
        <DatePicker Grid.Row="4" x:Name="EndDatePicker" SelectedDate="{Binding EndDate}" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="5" Text="Hinweis: Es werden alle Buchungen im ausgewählten Zeitraum exportiert." 
                   TextWrapping="Wrap" Opacity="0.7" FontSize="11" VerticalAlignment="Top" Margin="0,5,0,0"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Exportieren" Width="100" Margin="0,0,10,0" Click="Export_Click" IsDefault="True"/>
            <Button Content="Abbrechen" Width="100" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
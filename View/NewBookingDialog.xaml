<Window x:Class="TicketBookingWPF.View.NewBookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neue Buchung" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Ticket" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="0" Grid.Column="1"
                  ItemsSource="{Binding Tickets}"
                  SelectedItem="{Binding SelectedTicket}"
                  DisplayMemberPath="TicketCode"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Datum" VerticalAlignment="Center" Margin="0,8,0,0"/>
        <DatePicker Grid.Row="1" Grid.Column="1" Margin="0,8,0,0"
                    SelectedDate="{Binding BookingDate}"
                    ToolTip="Buchung gilt immer für einen ganzen Tag."/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Name" VerticalAlignment="Center" Margin="0,8,0,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="0,8,0,0"
                 Text="{Binding BookerName, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Preis" VerticalAlignment="Center" Margin="0,8,0,0"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="0,8,0,0"
                 Text="{Binding Price}"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Notiz" VerticalAlignment="Top" Margin="0,8,0,0"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="0,8,0,0"
                 Text="{Binding Note}" Height="70" AcceptsReturn="True"/>

        <CheckBox Grid.Row="5" Grid.Column="1" Margin="0,10,0,0"
                  Content="Zurückgegeben / abgeschlossen"
                  IsChecked="{Binding IsReturnedOrCompleted}"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Content="Abbrechen" Width="110" Margin="0,0,10,0"
                    IsCancel="True"/>
            <Button Content="Speichern" Width="110"
                    IsDefault="True"
                    Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</Window>
